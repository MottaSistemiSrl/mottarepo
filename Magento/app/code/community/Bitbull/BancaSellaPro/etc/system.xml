<?xml version="1.0"?>
<config>
    <sections>
        <payment>
            <groups>
                <gestpaypro translate="label" module="bitbull_bancasellapro">
                    <label>Banca Sella GestPay Pro</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Abilita soluzione</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </active>
                        <merchant_id translate="label">
                            <label>Codice Esercente</label>
                            <sort_order>5</sort_order>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </merchant_id>
                        <debug translate="label">
                            <label>Abilita modalità debug</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment>
                                <![CDATA[Se abilitato inserire un codice esercente di test e i pagaemnti saranno effettuati su https://testecomm.sella.it]]>
                            </comment>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </debug>
                        <log translate="label">
                            <label>Abilita log</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment>
                                <![CDATA[Abilita i messaggi di log nel file <i>Bitbull_BancaSellaPro.log</i>]]>
                            </comment>
                            <sort_order>13</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </log>
                        <order_status_ko_user translate="label">
                            <label>Stato dell'ordine annullato dall'utente</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_order_status</source_model>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </order_status_ko_user>
                        <order_status_ko_gestpay translate="label">
                            <label>Stato dell'ordine annullato da banca sella</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_order_status</source_model>
                            <sort_order>26</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </order_status_ko_gestpay>
                        <order_status_ok_gestpay translate="label">
                            <label>Stato dell'ordine confermato da banca sella</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_order_status</source_model>
                            <sort_order>27</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </order_status_ok_gestpay>
                        <order_status_fraud_gestpay translate="label">
                            <label>Abilitare controllo probabile frode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment>
                                <![CDATA[Se il pagamento non supera il controllo antifrode assegna lo stato "Review Payment" e status "Fraud"]]>
                            </comment>
                            <sort_order>28</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </order_status_fraud_gestpay>
                        <title translate="label">
                            <label>Titolo</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title>
                        <description translate="label">
                            <label>Descrizione</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>35</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </description>
                        <allowspecific translate="label">
                            <label>Pagamento Disponibile Per</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>40</sort_order>
                            <source_model>adminhtml/system_config_source_payment_allspecificcountries</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </allowspecific>
                        <specificcountry translate="label">
                            <label>Paesi Autorizzati</label>
                            <frontend_type>multiselect</frontend_type>
                            <sort_order>45</sort_order>
                            <source_model>adminhtml/system_config_source_country</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends><allowspecific>1</allowspecific></depends>
                        </specificcountry>

                        <language translate="label">
                            <label>Seleziona la lingua</label>
                            <frontend_type>select</frontend_type>
                            <comment>
                                <![CDATA[<b>Attenzione:</b> è possibilie impostare la lingua solo se l'account è configurato]]>
                            </comment>
                            <sort_order>60</sort_order>
                            <source_model>bitbull_bancasellapro/system_config_source_language</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </language>
                        <currency translate="label">
                            <label>Seleziona la moneta</label>
                            <frontend_type>select</frontend_type>
                            <comment>
                                <![CDATA[Selezionare la valuta di default del negozio ]]>
                            </comment>
                            <sort_order>65</sort_order>
                            <source_model>bitbull_bancasellapro/system_config_source_currency</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </currency>
                        <sort_order translate="label">
                            <label>Ordinamento</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_class>validate-number</frontend_class>
                        </sort_order>
                        <iframe translate="label">
                            <label>Abilita iframe</label>
                            <comment>
                                <![CDATA[Permette all'utente di effettuare il pagamento senza essere reindirizzato sul sito di banca sella]]>
                            </comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </iframe>
                        <tokenization translate="label">
                            <label>Abilita pagamento istantaneo</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment>
                                <![CDATA[Abilita l'uso dei token per i pagamenti rapidi, l'utente una volta ottenuto il token puo pagare semplicemente completando il checkout]]>
                            </comment>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </tokenization>
                    </fields>
                </gestpaypro>
            </groups>
        </payment>
    </sections>
</config>