<layout>
    <customer_account>
        <!-- Mage_Review -->
        <reference name="customer_account_navigation">
            <action method="addLink" translate="label" module="amrma" ifconfig="amrma/general/enabled">
                <name>amrma</name>
                <path>amrma/customer/history</path>
                <label>My Returns</label>
            </action>
        </reference>
    </customer_account>
    <amrma_customer_history>
        <update handle="customer_account"/>
        <reference name="my.account.wrapper">
            <block type="amrma/guest_history" name="amrma_guest_history" template="amasty/amrma/guest/history.phtml">

<action method="setCollection"><mode>customer</mode></action>
            </block>
            <block type="customer/account_dashboard" name="customer.account.link.back" template="customer/account/link/back.phtml"/>
        </reference>
    </amrma_customer_history>
    <amrma_customer_view>
        <update handle="customer_account"/>
        <reference name="my.account.wrapper">
            <block type="amrma/guest_view" name="amrma.guest.view">

            </block>
            <block type="customer/account_dashboard" name="customer.account.link.back" template="customer/account/link/back.phtml"/>
        </reference>
    </amrma_customer_view>
    <amrma_guest_view>
        <remove name="right"/>
        <remove name="left"/>

        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="amrma/guest_view" name="amrma.guest.view">

            </block>
            <block type="customer/account_dashboard" name="customer.account.link.back" template="customer/account/link/back.phtml"/>
        </reference>


    </amrma_guest_view>

<amrma_guest_export>
        <remove name="right"/>
        <remove name="left"/>

        <reference name="root">
            <action method="setTemplate"><template>page/empty.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="amrma/guest_export" name="guest_rma_export" template="amasty/amrma/guest/export.phtml">
            </block>
        </reference>
    </amrma_guest_export>
    <amrma_customer_export>
        <remove name="right"/>
        <remove name="left"/>

        <reference name="root">
            <action method="setTemplate"><template>page/empty.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="amrma/guest_export" name="guest_rma_export" template="amasty/amrma/guest/export.phtml">
            </block>
        </reference>
    </amrma_customer_export>

    <amrma_customer_form translate="label">
        <label>Customer My Account Address Edit Form</label>
        <reference name="head">
            <action method="addCss"><stylesheet>css/amasty/amrma/edit.css</stylesheet></action>
            <action method="addItem"><type>skin_js</type><name>js/amasty/amrma/edit.js</name></action>
        </reference>
        <!-- Mage_Customer -->
        <update handle="customer_account"/>
        <reference name="my.account.wrapper">
            <block type="amrma/rma_edit" name="customer_rma_edit" template="amasty/amrma/rma/edit.phtml">
            </block>

</reference>
    </amrma_customer_form>
    <amrma_guest_login translate="label">
        <label>Order Return Login Form</label>
        <!-- Mage_Customer -->
        <remove name="right"/>
        <remove name="left"/>

        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="amrma/guest_login" name="amrma_guest_login" template="amasty/amrma/guest/login.phtml" />
        </reference>
    </amrma_guest_login>

    <amrma_guest_history translate="label">
        <label>RMA Order</label>
        <!-- Mage_Customer -->
        <remove name="right"/>
        <remove name="left"/>

        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="amrma/guest_history" name="amrma_guest_history" template="amasty/amrma/guest/history.phtml" />
        </reference>
    </amrma_guest_history>

    <amrma_guest_form translate="label">
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="head">
            <action method="addCss"><stylesheet>css/amasty/amrma/edit.css</stylesheet></action>
            <action method="addItem"><type>skin_js</type><name>js/amasty/amrma/edit.js</name></action>
        </reference>
        <reference name="content">
            <block type="amrma/rma_edit" name="customer_rma_edit" template="amasty/amrma/rma/edit.phtml">
            </block>
        </reference>
    </amrma_guest_form>

    <default>
        <reference name="footer_links">
            <action method="addLink" translate="label title" module="catalog" ifconfig="amrma/general/enabled">
                <label>Orders and Returns</label>
                <url helper="amrma/data/getLoginUrl" />
                <title>Orders and Returns</title>
            </action>
        </reference>
    </default>

</layout>