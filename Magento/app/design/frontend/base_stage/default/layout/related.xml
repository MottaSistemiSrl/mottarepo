<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.1.0">
    <catalog_product_view>
        <reference name="head">
            <action method="addItem" ifconfig="ewall_related/general/enabled"><type>skin_css</type><name>css/style_fr.css</name></action>
            <action method="addItem" ifconfig="ewall_related/general/enabled"><type>skin_css</type><name>css/gritter.css</name></action>
            <action method="addItem" ifconfig="ewall_related/general/enabled"><type>skin_css</type><name>css/jquery.fancybox.css</name></action>
            <action method="addItem" ifconfig="ewall_related/general/enabled"><type>skin_js</type><name>js/jquery-1.8.3.js</name></action>
            <action method="addItem" ifconfig="ewall_related/general/enabled"><type>skin_js</type><name>js/jquery.noconflict.js</name></action>
            <action method="addItem" ifconfig="ewall_related/general/enabled"><type>skin_js</type><name>js/upselling.js</name></action>
            <action method="addItem" ifconfig="ewall_related/general/enabled"><type>skin_js</type><name>js/jquery.fancybox.pack.js</name></action>
        </reference>
       <reference name="product.info">
		    <action method="setTemplate"><template>related/product/view.phtml</template></action>
            <block type="related/index" name="related_index"  />
        </reference>
		 <reference name="before_body_end">
            <block type="core/template" template="related/confirm.phtml" name="easytabs.confirm" />
        </reference>
    </catalog_product_view>

    <related_index_index>
		<reference name="root">   
			<action method="setTemplate"><template>page/2columns-right.phtml</template></action>   
		</reference>
		<reference name="head">
            <action method="addItem" ifconfig="ewall_related/general/enabled"><type>skin_css</type><name>css/style_fr.css</name></action>
            <action method="addItem" ifconfig="ewall_related/general/enabled"><type>skin_css</type><name>css/gritter.css</name></action>
            <action method="addItem" ifconfig="ewall_related/general/enabled"><type>skin_css</type><name>css/jquery.fancybox.css</name></action>
            <action method="addItem" ifconfig="ewall_related/general/enabled"><type>skin_js</type><name>js/jquery-1.8.3.js</name></action>
            <action method="addItem" ifconfig="ewall_related/general/enabled"><type>skin_js</type><name>js/jquery.noconflict.js</name></action>
            <action method="addItem" ifconfig="ewall_related/general/enabled"><type>skin_js</type><name>js/upselling.js</name></action>
            <action method="addItem" ifconfig="ewall_related/general/enabled"><type>skin_js</type><name>js/jquery.fancybox.pack.js</name></action>
        </reference>
        <reference name="before_body_end">
            <block type="core/template" template="related/confirm.phtml" name="easytabs.confirm" />
        </reference>      
		<reference name="content">   
			<block type="related/index" name="related_index" />   
		</reference>   
	</related_index_index> 
</layout>
