<layout version="0.1.0">

    <default>
        <reference name="head">
            <action method="addCss"><stylesheet>sass/app.css</stylesheet></action>
            <action method="addCss"><stylesheet>css/custom.css</stylesheet></action>

            <block type="core/text" name="slick">
                <action method="setText">
                  <text>
                     <![CDATA[<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.5.9/slick.css"/>]]>
                  </text>
                </action>
             </block> 


            <action method="addItem"><type>skin_js</type><script>js/vendor/modernizr.js</script></action>
            <action method="addItem"><type>skin_js</type><script>js/vendor/jquery.min.js</script></action>

            <block type="core/text" name="jwplatform">
                <action method="setText">
                  <text>
                     <![CDATA[<script type="text/javascript" src="https://content.jwplatform.com/libraries/UWwy7kn6.js"></script>]]>
                  </text>
                </action>
             </block>            








            <action method="addItem"><type>skin_js</type><script>js/app.js</script></action>
        </reference>
        <reference name="right">
            <block type="core/text_list" name="spalla.destra" as="spallaDestra" translate="label">
                <label>Spalla Destra</label>
            </block>
            <block type="core/text_list" name="spalla.destra.creazioni" as="spallaDestracreazioni" translate="label" before="spalla.destra">
                <label>Spalla Destra Creazioni</label>
            </block>
        </reference>
        <reference name="left">
            <block type="core/text_list" name="spalla.destra" as="spallaDestra" translate="label">
                <label>Spalla Destra</label>
            </block>

        </reference>
    </default>

    <print translate="label" module="page">
        <reference name="head">
            <action method="addCss"><stylesheet>sass/app.css</stylesheet></action>
        </reference>
    </print>

    <cms_index_index>
        <reference name="head">
            <action method="addItem"><type>skin_js</type><script>js/vendor/jquery.cycle2.min.js</script></action>
        </reference>
        <reference name="content">
            <block type="blog/blog" template="sevenlike/home_ultimi_post.phtml" />
            <block type="catalog/product_list" template="sevenlike/home_prodotti_vetrina.phtml" />
            <block type="page/html" template="sevenlike/home_vantaggi.phtml" />
            <block type="blog/blog" template="sevenlike/home_prossimi_eventi.phtml" />
        </reference>
    </cms_index_index>

    <PRODUCT_ATTRIBUTE_SET_ID_9 >
        <remove name="spalla.destra" />
    </PRODUCT_ATTRIBUTE_SET_ID_9>

    <PRODUCT_ATTRIBUTE_SET_ID_10 translate="label" module="catalog">
        <label>Pagina creazione</label>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
            <action method="setIsHandle"><applied>1</applied></action>
        </reference>

        <remove name="product.info" />

        <reference name="content">
            <block type="catalog/product_view" name="product.info1" template="catalog/product/view_creazioni.phtml">

                <block type="starplugins_cloudzoom/product_view_media"
                       name="product.info.media"
                       as="media"
                       template="catalog/product/view/media.phtml"/>
                <block type="core/text_list" name="alert.urls" as="alert_urls" translate="label">
                    <label>Alert Urls</label>
                </block>
                <block type="productcomment/productcomment" name="productcomment" as="productcomment" template="productcomment/productcomment.phtml"/>
                <!--<block type="newsletter/subscribe" name="newsletter" template="newsletter/subscribe.phtml"/>-->
                <!--<block type="core/text_list" name="spalla.destra" as="spallaDestra" translate="label">-->
                    <!--<label>Spalla Destra</label>-->
                <!--</block>-->
            </block>
        </reference>

        <reference name="right">
           <block before="button_carica_creazione" type="catalog/product_view" name="creazione.utente" template="megaforum/profile_sidebar.phtml"/>
           <block before="ultime_creazioni"  type="cms/block" name="button_carica_creazione">
                <action method="setBlockId"><block_id>button_carica_creazione</block_id></action>
           </block>
           <block after="button_carica_creazione" type="catalog/product_view" name="ultime_creazioni" template="sevenlike/ultime_creazioni.phtml"/>
        </reference>
    </PRODUCT_ATTRIBUTE_SET_ID_10>

    <PRODUCT_ATTRIBUTE_SET_ID_11 translate="label" module="catalog">
		<reference name="product.info">
			<action method="setTemplate"><template>catalog/product/view_video.phtml</template></action>
		</reference>


        <reference name="content">
                <block type="fileuploader/fileuploader" name="product.attachments" as="product.attachments" template="fileuploader/desc_attachments.phtml"/>
                <block type="productcomment/productcomment" name="productcomment" as="productcomment" template="productcomment/productcomment.phtml"/>
        </reference>

        <reference name="product.info.upsell">
            <action method="setTemplate" >
                <template>moreview/upsell_video.phtml</template>
            </action>
            <action method="setColumnCount"><columns>4</columns></action>
            <action method="setItemLimit"><type>upsell</type><limit>4</limit></action>
        </reference>
    </PRODUCT_ATTRIBUTE_SET_ID_11>


<default>
    <reference name="before_body_end">
        <block type="core/text" name="filename.js">
            <action method="setText">
                <text><![CDATA[<script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.5.9/slick.min.js"></script>]]></text>
            </action>
        </block>
    </reference>
</default>
    
</layout>