<layout>
    <catalog_product_view>
        <reference name="head">
            <action method="addItem"><type>skin_css</type><name>css/starplugins/cloudzoom.css</name></action>
            <action method="addItem"><type>skin_js</type><name>js/vendor/cloudzoom.js</name></action>
        </reference>
        <reference name="product.info">
            <action method="unsetChild"><name>product.info.media</name></action>
            <block type="starplugins_cloudzoom/product_view_media"
                   name="product.info.media"
                   as="media"
                   template="catalog/product/view/media.phtml"/>
        </reference>
    </catalog_product_view>
    <review_product_list>
        <reference name="product.info">
            <action method="unsetChild"><name>product.info.media</name></action>
            <block type="starplugins_cloudzoom/product_view_media"
                   name="product.info.media"
                   as="media"
                   template="catalog/product/view/media.phtml"/>
        </reference>
    </review_product_list>
</layout>
