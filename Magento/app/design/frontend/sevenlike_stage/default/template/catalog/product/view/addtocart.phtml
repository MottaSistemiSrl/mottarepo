<?php $_product = $this->getProduct(); ?>
<?php  ?>
<?php $btnClass = ""; ?>
<?php $buttonTitle = ""; ?>

<?php //modificato davide per far uscire acquista sui simple ?>
<?php if($_product->getTypeId() == "downloadable") : ?>
    <?php $buttonTitle = $this->__('Download pdf'); ?>
	<?php $buttonTitle .= " " . Mage::helper("core")->currency($_product->getFinalPrice()); ?>
    <?php $btnClass = "file"; ?>

<?php elseif($_product->getTypeId() == "simple"): ?>
    <?php $buttonTitle = $this->__('Acquista'); ?>
    <?php $buttonTitle .= " " . Mage::helper("core")->currency($_product->getFinalPrice()); ?>
    <?php $btnClass = "file"; ?>

<?php elseif($_product->getTypeId() == "bundle"): ?>
    <?php $buttonTitle = $this->__('Acquista'); ?>
    <?php $btnClass = "total"; ?>

<?php elseif($_product->getTypeId() == "configurable"): ?>
    <?php $buttonTitle = $this->__('Acquista'); ?>
    <?php $buttonTitle .= " " . Mage::helper("core")->currency($_product->getFinalPrice()); ?>
    <?php $btnClass = "corso"; ?>
<?php else: ?>

<?php endif; ?>


<?php if($_product->isSaleable()): ?>
    <div class="add-to-cart">
        <?php if(!$_product->isGrouped()): ?>
        <input type="hidden" name="qty" id="qty" maxlength="12" value="<?php echo $this->getProductDefaultQty() * 1 ?>" title="<?php echo $this->__('Qty') ?>" class="input-text qty" />
        <?php endif; ?>
            <button type="button" title="<?php echo $this->__('Add to Cart') ?>" class="button btn-cart-with-price <?= $btnClass; ?>" onclick="productAddToCartForm.submit(this)">
				
				<?php if($_product->getTypeId() == "simple") : ?>
                <span style="background-position: 7px 16px;" class="down">
                    <span><?php echo $buttonTitle ?></span>
                </span>
				<?php elseif($_product->getTypeId() != "simple") : ?>
				<span style="background-position: 7px -36px;" class="down">
                    <span><?php echo $buttonTitle ?></span>
                </span>
				<?php endif; ?>
            </button>
        <?php echo $this->getChildHtml('', true, true) ?>
    </div>
<?php endif; ?>