        <?php $_products->clear()->addFieldToFilter("attribute_set_id", array("neq" => 10));?>

        <div class="block block-list block-viewed">
            <?php if (count($_products)){ ?>
            <div class="block-title">
                <h2 class="viewed">SHOP <small>Visti di recente</small></h2>
            </div>
            <ol id="recently-viewed-items" class="products-grid">
